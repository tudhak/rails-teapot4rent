<div class="container my-4 mx-auto">

  <div class="row justify-content-center collapse" id="bookFormCollapse" data-controller="booking-price">

    <div class="col-lg-4 col-sm-8">

      <%= simple_form_for [teapot, booking] do |f| %>
        <%= f.input :start_date,
                    as: :string,
                    label: false,
                    placeholder: "Start date",
                    input_html: { data: {
                      controller: "datepicker",
                      booking_price_target: "startDate",
                      action: "change->booking-price#priceDisplay"
                    } } %>
        <%= f.input :end_date,
                    as: :string,
                    label: false,
                    placeholder: "End date",
                    input_html: { data: {
                      controller: "datepicker",
                      booking_price_target: "endDate",
                      action: "change->booking-price#priceDisplay"
                    } } %>

        <input type="hidden" value="<%= teapot.price_per_day %>" data-booking-price-target="pricePerDay">
        <input type="hidden" value="<%= teapot.style %>" data-booking-price-target="teapotStyle">
        <div data-booking-price-target="priceContainer" class="d-none my-3">
          <p data-booking-price-target="durationDisplay" class="mb-3 px-2 text-center"></p>
          <p data-booking-price-target="priceDisplay" class="px-2 text-center"></p>
        </div>
        <div class="d-flex justify-content-center">
        <%= f.submit class:"btn btn-primary" %>
        </div>
      <% end %>
      <div class="d-flex justify-content-center">
        <%= link_to 'Back', teapots_path, class:"btn btn-secondary my-4" %>
      </div>

    </div>
  </div>
</div>
